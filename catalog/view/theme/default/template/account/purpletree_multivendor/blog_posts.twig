{{ header }}
<div class="pts-container">
  <ul class="pts-breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div>
    <div id="pts-content">{{ content_top }}
      <h2>{{ heading_title }}</h2>
      {% if blog %}
      <div class="pts-row">
        {% for pts_blog in blog %}
		 <div class="pts-col-lg-3 pts-col-md-3 pts-col-sm-6 pts-col-xs-12">	<div class=" pts-text-center pts-product-thumb transition" style="text-align:center !important">	  
			<div class="transition">
			
			<div class="pts-pull-left pts-col-md-6">
				{{ pts_blog.date }}
			</div>			
			  <div><a href="{{ pts_blog.href }}"><img src="{{ pts_blog.thumb }}" alt="{{ pts_blog.title }}" title="{{ pts_blog.title }}" class=" pts-seller-blog-image img-responsive"></a></div>
			  <div class="caption">
				<h4><a href="{{ pts_blog.href }}">{{ pts_blog.title }}</a></h4>
				<p>{{ pts_blog.description }}</p>
			  </div>
			  <div>
				<a href="{{ pts_blog.href }}">{{ text_readmore }}</a>
			  </div>
			</div>
			</div>
		  </div>
		 {% endfor %}
      </div>
      <div class="pts-row">
        <div class="pts-col-sm-6 pts-text-left">{{ pagination }}</div>
        <div class="pts-col-sm-6 pts-text-right">{{ results }}</div>
      </div>
       {% else %}
      <p>{{ text_empty }}</p>
      <div class="buttons">
        <div class="pts-pull-right"><a href="{{ continue }}" class="pts-btn pts-btn-primary">{{ button_continue }}</a></div>
      </div>
   {% endif %}
      {{ content_bottom }}</div>
  </div>
</div>
{{ footer }}
