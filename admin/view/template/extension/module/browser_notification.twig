{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ action.cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error.permission != '' %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_permission }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> <strong>{{ text_edit }} </strong>({{help_message}})</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action.save }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          
            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-message">{{ entry_apiKey }} <strong style="color:red">*</strong></label>
                <div class="col-sm-10">
                    <input type="text" required name="module_browser_notification_apiKey" value="{{ apiKey }}" placeholder="{{ placeholder_apiKey }}" id="input-message" class="form-control" />
                    {% if error.message %}
                        <div class="text-danger">{{ error_apiKey }}</div>
                    {% endif %}
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-message">{{ entry_authDomain }} <strong style="color:red">*</strong></label>
                <div class="col-sm-10">
                    <input type="text" required name="module_browser_notification_authDomain" value="{{ authDomain }}" placeholder="{{ placeholder_authDomain }}" id="input-message" class="form-control" />
                    {% if error.message %}
                        <div class="text-danger">{{ error_authDomain }}</div>
                    {% endif %}
                </div>
            </div>


            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-message">{{ entry_databaseURL }} <strong style="color:red">*</strong></label>
                <div class="col-sm-10">
                    <input type="text" required name="module_browser_notification_databaseURL" value="{{ databaseURL }}" placeholder="{{ placeholder_databaseURL }}" id="input-message" class="form-control" />
                    {% if error.message %}
                        <div class="text-danger">{{ error_databaseURL }}</div>
                    {% endif %}
                </div>
            </div>


            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-message">{{ entry_storageBucket }} <strong style="color:red">*</strong></label>
                <div class="col-sm-10">
                    <input type="text" required name="module_browser_notification_storageBucket" value="{{ storageBucket }}" placeholder="{{ placeholder_storageBucket }}" id="input-message" class="form-control" />
                    {% if error.message %}
                        <div class="text-danger">{{ error_storageBucket }}</div>
                    {% endif %}
                </div>
            </div>


            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-message">{{ entry_messagingSenderId }} <strong style="color:red">*</strong></label>
                <div class="col-sm-10">
                    <input type="text" required name="module_browser_notification_messagingSenderId" value="{{ messagingSenderId }}" placeholder="{{ placeholder_messagingSenderId }}" id="input-message" class="form-control" />
                    {% if error.message %}
                        <div class="text-danger">{{ error_messagingSenderId }}</div>
                    {% endif %}
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-message">{{ entry_serverKey }} <strong style="color:red">*</strong></label>
                <div class="col-sm-10">
                    <input type="text" required name="module_browser_notification_serverKey" value="{{ server_key }}" placeholder="{{ placeholder_serverKey }}" id="input-message" class="form-control" />
                    {% if error.message %}
                        <div class="text-danger">{{ error_serverKey }}</div>
                    {% endif %}
                </div>
            </div>


          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_browser_notification_status" id="input-status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}