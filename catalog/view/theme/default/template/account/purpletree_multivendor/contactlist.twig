{{ header }}
<div class="pts-container">
	<ul class="pts-breadcrumb">
	{% for breadcrumb in breadcrumbs %}
		<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
	{% endfor %}
	</ul>
	{% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
    {% endif %}
    {% if success %}
    <div class="alert pts-alert-success"><i class="fa fa-check-circle"></i> {{ success }}</div>
    {% endif %}
	<div class="pts-row d-flex">{{ column_left }}
		{% if column_left and column_right %}
		{% set class = 'pts-col-sm-6' %}
		{% elseif column_left or column_right %}
		{% set class = 'pts-col-sm-9' %}
		{% else %}
		{% set class = 'pts-col-sm-12' %}
		{% endif %}
		<div id="pts-content" class="{{ class }}">{{ content_top }}
				<h1>{{ heading_title }}</h1>
					{% if sellercontacts %}
						{% for contact in sellercontacts %}
					<table class="pts-table pts-table-striped pts-table-bordered">
					  <tr>
						<td style="width: 90%;"><strong>{{ contact.customer_name }}</strong><br>
						<strong>{% if contact.customer_id ==0 %}{{ contact.customer_email }}{% endif %}</strong></td>
						<td class="pts-text-right"><a href='{{ contact.reply }}' > {{ button_view_all }}</a></td>
					  </tr>
					  <tr {% if contact.seen %} style="background-color: #b4e694;"{% endif %}>
						<td style="width: 90%;">
						<p>{{ contact.message }} </p>
						</td>
						<td colspan="2">
							{{ contact.date_added }} 
						</td>
					  </tr>
					</table>
					{% endfor %}
					<div class="pts-col-sm-6 pts-text-left">{{ pagination }}</div>
					<div class="pts-col-sm-6 pts-text-right">{{ results }}</div>
					{% else %}
					<div class="pts-text-center">{{ text_empty_result }}</div>
					{% endif %}
				{{ content_bottom }}</div>
				{{ column_right }}</div>
</div>
{{ footer }}